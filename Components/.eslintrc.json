{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": 0

    },
    "globals": {
        "React": true,
        "AddNewItemPage": true,
        "ItemInfo": true,
        "bananaItems": true,
        "MainView": true,
        "NavBar": true,
        "ReactDOM": true,
        "bananaItems":true
    }

}